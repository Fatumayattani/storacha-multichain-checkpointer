# Storacha Multichain Checkpointer - Frontend Environment Variables

# ==============================================
# CONTRACT ADDRESSES
# ==============================================

# Base Sepolia Testnet (Chain ID: 84532)
# Publisher Contract - Deploys checkpoints and publishes to Wormhole
NEXT_PUBLIC_BASE_SEPOLIA_PUBLISHER_ADDRESS=0xYOUR_PUBLISHER_ADDRESS_HERE

# Avalanche Fuji Testnet (Chain ID: 43113)
# Receiver Contract - Receives cross-chain messages from Wormhole
NEXT_PUBLIC_FUJI_RECEIVER_ADDRESS=0x75d2b02f5980D4D1BB6cf7d3829A7a1F3BB1Ef76

# ==============================================
# CHAIN CONFIGURATION
# ==============================================

# Supported Chain IDs (comma-separated)
NEXT_PUBLIC_SUPPORTED_CHAINS=84532,43113

# Default chain for wallet connection
NEXT_PUBLIC_DEFAULT_CHAIN_ID=84532

# ==============================================
# WALLET CONNECT
# ==============================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ==============================================
# STORACHA / WEB3.STORAGE
# ==============================================

# Storacha API endpoint (default: https://api.web3.storage)
NEXT_PUBLIC_STORACHA_API_URL=https://api.web3.storage

# ==============================================
# IPFS GATEWAYS
# ==============================================

# Primary IPFS gateway
NEXT_PUBLIC_PRIMARY_IPFS_GATEWAY=https://w3s.link

# Fallback gateways (comma-separated)
NEXT_PUBLIC_FALLBACK_IPFS_GATEWAYS=https://ipfs.io,https://cloudflare-ipfs.com,https://dweb.link

# ==============================================
# WORMHOLE CONFIGURATION
# ==============================================

# Wormhole Chain IDs (different from EVM chain IDs)
NEXT_PUBLIC_WORMHOLE_CHAIN_ID_BASE=30
NEXT_PUBLIC_WORMHOLE_CHAIN_ID_AVALANCHE=6

# Wormhole Guardian RPC
NEXT_PUBLIC_WORMHOLE_RPC=https://wormhole-v2-testnet-api.certus.one

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Enable debug mode
NEXT_PUBLIC_DEBUG_MODE=false

# Analytics (optional)
# NEXT_PUBLIC_ANALYTICS_ID=

# Sentry DSN (optional)
# NEXT_PUBLIC_SENTRY_DSN=

# ==============================================
# DEVELOPMENT
# ==============================================

# Show mock data in development
NEXT_PUBLIC_USE_MOCK_DATA=false

# Enable feature flags
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false
