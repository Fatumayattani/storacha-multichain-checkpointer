{
  "name": "storacha-multichain-checkpointer",
  "version": "1.0.0",
  "description": "A smart contract system for checkpointing Storacha CIDs on-chain with availability proofs",
  "scripts": {
    "build": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "deploy:sepolia": "npx hardhat ignition deploy ignition/modules/Counter.ts --network sepolia",
    "deploy:mainnet": "npx hardhat ignition deploy ignition/modules/Counter.ts --network mainnet",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@nomicfoundation/hardhat-ignition": "^3.0.1",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.0",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^5.3.3",
    "eslint": "^8.0.0",
    "ethers": "^6.15.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "mocha": "^11.7.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.0"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
